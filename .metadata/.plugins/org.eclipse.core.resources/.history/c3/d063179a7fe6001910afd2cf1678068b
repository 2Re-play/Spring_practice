package service;

import java.util.HashMap;
import java.util.Map;

import model.Customer;
import model.Order;

public class OrderService {

	private Map<String, Order> orderMap;
	
	public OrderService () {
		
		orderMap = new HashMap<String, Order> ();
		
	}

	public void addOrder(Order order) {
		
		orderMap.put(order.getItemNumber(), order.getDescription(), order.getPriceEach(), order.getFirstName(), order.getLastName(), order.getMiddleInitial(), order.getShippingAddress(), order.getCreditCard(), order.getCreditCardNumber());
		
	}
	
	public boolean checkCreditCardNumebr(String cardNumber, String repeatCardNumber) {
			if(cardNumber.equals(repeatCardNumber))
				return true;
			else 
				return false;
		}

}
